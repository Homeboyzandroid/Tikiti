<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/instructions"
            android:text="REGISTRATION INFORMATION"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:text="1. Go to your phone MPESA menu"
            android:layout_above="@+id/txt5"
            android:layout_alignLeft="@+id/txt5"
            android:layout_alignStart="@+id/txt5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt5"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:text="2. Select Lipa Na Mpesa"
            android:layout_below="@+id/instructions"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:textColor="@color/nliveo_black_light"
            android:layout_margin="@dimen/tv_margin"
            android:textSize="@dimen/text_size_small"
            android:text="3. Select Paybill from your MPESA menu"
            android:layout_below="@+id/txt5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.Select &quot;Enter business no&quot;and enter "
            android:id="@+id/textView4"
            android:textColor="@color/nliveo_black_light"
            android:layout_margin="@dimen/tv_margin"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/txt2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NeText"
            android:id="@+id/tvbsno"
            android:textStyle="bold"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_marginRight="@dimen/tv_margin"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignTop="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvpayid"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and press Ok"
            android:id="@+id/textView5"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/tvbsno"
            android:layout_toEndOf="@+id/tvbsno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.Select &quot;Enter account no&quot;"
            android:id="@+id/textView6"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/tvbsno"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvacccno"
            android:textStyle="bold"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.Enter amount as Ksh. "
            android:id="@+id/textView7"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/tv_margin"
            android:layout_marginTop="@dimen/tv_margin"
            android:layout_marginBottom="@dimen/tv_margin"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textStyle="bold"
            android:textColor="@color/nliveo_black_light"
            android:id="@+id/tvamount"
            android:textSize="@dimen/text_size_small"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/txt5"
            android:layout_toEndOf="@+id/txt5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.Enter your M-Pesa PIN and press &quot;OK&quot;"
            android:id="@+id/textView8"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txt2"
            android:layout_alignEnd="@+id/txt2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.Confirm all the details are correct and press &quot;OK&quot;"
            android:id="@+id/textView9"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@color/nliveo_black_light"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice"
            android:textColor="@color/nliveo_black_light"
            android:id="@+id/textView10"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/textView9"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nliveo_black_light"
            android:text="YOU WILL RECEIVE AN SMS FROM MPESA AND TIKITI AS YOUR TICKET. KEEP IT SAFE FOR PRESENTATION AT THE ENTRANCE"
            android:id="@+id/textView11"
            android:layout_margin="@dimen/tv_margin"
            android:layout_below="@+id/textView10"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok Got It"
            android:id="@+id/buttonok"
            android:background="@color/colorPrimary"
            android:textColor="@color/nliveo_white"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="@dimen/tv_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/tv_margin"
            android:layout_marginBottom="@dimen/tv_margin"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />


    </RelativeLayout>
</ScrollView>
